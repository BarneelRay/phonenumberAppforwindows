from tkinter import *

import phonenumbers
from phonenumbers import timezone , geocoder, carrier
root =Tk()
root.title("phone number search")
root.geometry("450x410+100+100")
root.configure(bg="red")
photo=PhotoImage(file="C:\\Users\\BARNEEL RAY\\Desktop\\python practise\\flappy bird\\gallery\\sprites\\pipe.png")
