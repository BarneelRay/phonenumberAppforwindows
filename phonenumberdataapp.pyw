input_view=Entry(root,width=40,borderwidth=7)
input_view.grid(row=0,column=0,padx=3,pady=2,columnspan=3)
def button_click(a):
    input_view.get()
    input_view.insert(END, str(a))

def clear_text():
    input_view.delete(0,END)
def backspace():
    input_view.delete(input_view.index("end") - 1)
def search():
    number=str(input_view.get())
    phonenumber=phonenumbers.parse(number)
    Carrier=carrier.name_for_number(phonenumber,'en')
    Region=geocoder.description_for_number(phonenumber,'en')
    time=timezone.time_zones_for_number(phonenumber)
    '''
    print(Carrier);print("is the service provider")
    print(Region);print("is the region")
    print(time);print("is the timezone")
    '''
    input_view.delete(0,END)
    input_view.insert(END,str(Carrier)+";"+str(time)+";"+str(Region))
